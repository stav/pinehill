---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="min-h-screen">
			<!-- Hero Section -->
			<section class="bg-gradient-to-br from-secondary-50 to-secondary-100 py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center">
						<h1 class="text-4xl md:text-6xl font-bold text-secondary-900 mb-6">
							Welcome to the <span class="text-primary-600">{SITE_TITLE}</span>
						</h1>
						<p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
							{SITE_DESCRIPTION}
						</p>
						<div class="flex flex-col sm:flex-row gap-4 justify-center">
							<a href="/work-orders" class="btn btn-primary text-lg px-8 py-3">
								View Work Orders
							</a>
							<a href="/blog" class="btn btn-secondary text-lg px-8 py-3">
								Read Blog
							</a>
						</div>
					</div>
				</div>
			</section>

			<!-- Features Section -->
			<section class="py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-16">
						<h2 class="text-3xl font-bold text-secondary-800 mb-4">
							Community Features
						</h2>
						<p class="text-lg text-gray-600 max-w-2xl mx-auto">
							Everything you need to collaborate on Pine Hill projects and stay connected with your community.
						</p>
					</div>
					
					<div class="grid md:grid-cols-3 gap-8">
						<div class="card text-center">
							<div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-secondary-900 mb-2">Work Orders</h3>
							<p class="text-gray-600">
								Create, track, and manage work orders with detailed descriptions, priorities, and status updates.
							</p>
						</div>
						
						<div class="card text-center">
							<div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-secondary-900 mb-2">Comments & Discussion</h3>
							<p class="text-gray-600">
								Engage in threaded discussions on work orders with comments, suggestions, and ideas.
							</p>
						</div>
						
						<div class="card text-center">
							<div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-semibold text-secondary-900 mb-2">Blog & News</h3>
							<p class="text-gray-600">
								Stay updated with the latest news, tutorials, and insights from the Pine Hill community.
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- CTA Section -->
			<section class="bg-gray-900 py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
					<h2 class="text-3xl font-bold text-white mb-4">
						Ready to Get Started?
					</h2>
					<p class="text-xl text-gray-300 mb-8">
						Join our community and start collaborating on Pine Hill projects today.
					</p>
					<a href="/register" class="btn btn-primary text-lg px-8 py-3">
						Join the Community
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
